<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="CalculatorButtonBrush" StartPoint="-1,-1" EndPoint="1,1" >
        <GradientStop Color="#14ffec" />
        <GradientStop Color="#0d7377" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CalculatorFuncButtonBrush" StartPoint="-1,-1" EndPoint="1,1">
        <GradientStop Color="#ffd460" />
        <GradientStop Color="#f07b3f" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CalculatorButtonFuncClickedBrush" StartPoint="0.5,0.5" EndPoint="1,1" >
        <GradientStop Color="#ffd460" />
        <GradientStop Color="#f07b3f" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CalculatorButtonClickedBrush" StartPoint="0.5,0.5" EndPoint="1,1" >
        <GradientStop Color="#14ffec" />
        <GradientStop Color="#0d7377" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CalculatorBackgroundBrush" StartPoint="0,0" EndPoint="1,1" >
        <GradientStop Color="#323232" />
        <GradientStop Color="#212121" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="LabelColor" Color="Black"/>


</ResourceDictionary>